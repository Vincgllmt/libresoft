<%- include('../partials/header.ejs') %>
<form method="POST" class="m-4">
    <div class="mb-3">
        <label for="name" class="form-label">Nom</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= software.name %>">
    </div>
    <div class="mb-3">
        <label for="version" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="10"><%= software.description %></textarea>
    </div>
    <div class="mb-3">
        <label for="url" class="form-label">URL</label>
        <input type="text" class="form-control" id="url" name="url" value="<%= software.url %>">
    </div>
    <div class="row">
        <div class="col">
            <label for="url" class="form-label">Wikipedia</label>
            <input type="text" class="form-control" id="url" name="url_wikipedia" value="<%= software.external_resources?.wikipedia?.url %>">
        </div>
        <div class="col">
            <label for="url" class="form-label">Sill</label>
            <input type="text" class="form-control" id="url" name="url_sill" value="<%= software.external_resources?.sill?.url %>">
        </div>
        <div class="col">
            <label for="url" class="form-label">Framalibre</label>
            <input type="text" class="form-control" id="url" name="url_framalibre" value="<%= software.external_resources?.framalibre?.url %>">
        </div>
    </div>
    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary">Modifier</button>
    </div>
</form>
<%- include('../partials/footer.ejs') %>